<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Amigoz</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        :root {
            --ig-bg: #fafafa;
            --ig-border: #dbdbdb;
            --brand-gradient: radial-gradient(circle at 30% 107%, #fdf497 0%, #fdf497 5%, #fd5949 45%, #d6249f 60%, #285AEB 90%);
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            background-color: var(--ig-bg);
            color: #262626;
        }

        /* Sleek Minimalist Navbar */
        .navbar-custom {
            background-color: #ffffff;
            border-bottom: 1px solid var(--ig-border);
            padding: 0.5rem 0;
            height: 60px;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            letter-spacing: -0.5px;
            background: var(--brand-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .nav-link {
            font-weight: 500;
            color: #262626 !important;
            font-size: 0.95rem;
            margin: 0 10px;
            transition: opacity 0.2s;
        }

            .nav-link:hover {
                opacity: 0.6;
            }

        /* Main Content Spacing */
        .main-content {
            min-height: calc(100vh - 120px); /* Adjust based on nav + footer */
        }

        /* Minimalist Footer */
        .footer-custom {
            background-color: transparent;
            font-size: 0.8rem;
            color: #8e8e8e;
            padding: 40px 0;
        }

        .footer-link {
            text-decoration: none;
            color: #00376b;
            font-weight: 600;
        }
    </style>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Amigoz</a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <i class="bi bi-list fs-2"></i>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Chat">
                                <i class="bi bi-chat-dots me-1"></i> Chat
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-check me-1"></i> Privacy
                            </a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center opacity-0 d-none d-lg-block">
                        Hidden Spacer
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container main-content" style="margin-top: 80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom mt-5">
        <div class="container text-center">
            <div class="mb-2">
                <a class="footer-link mx-2" asp-controller="Home" asp-action="Privacy">Privacy</a>
                <a class="footer-link mx-2" href="#">Terms</a>
                <a class="footer-link mx-2" href="#">Support</a>
            </div>
            <span>&copy; @DateTime.Now.Year Amigoz from AMIGOZ LABS</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Amigoz</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        :root {
            --ig-bg: #fafafa;
            --ig-border: #dbdbdb;
            --brand-gradient: radial-gradient(circle at 30% 107%, #fdf497 0%, #fdf497 5%, #fd5949 45%, #d6249f 60%, #285AEB 90%);
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--ig-bg);
            color: #262626;
        }

        .navbar-custom {
            background-color: #ffffff;
            border-bottom: 1px solid var(--ig-border);
            padding: 0.5rem 0;
            height: 65px;
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.6rem;
            letter-spacing: -1px;
            background: var(--brand-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .nav-link {
            font-weight: 500;
            color: #262626 !important;
            font-size: 0.95rem;
            transition: opacity 0.2s;
        }

        /* User Profile & Logout Area */
        .user-section {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .username-display {
            font-weight: 600;
            font-size: 0.9rem;
            color: #262626;
            text-decoration: none;
        }

        .logout-btn {
            background: none;
            border: none;
            color: #ed4956; /* Instagram Red */
            font-weight: 700;
            font-size: 0.85rem;
            padding: 0;
            cursor: pointer;
        }

            .logout-btn:hover {
                color: #c92c3a;
            }

        .user-avatar-circle {
            width: 32px;
            height: 32px;
            background: #efefef;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid var(--ig-border);
        }

        .main-content {
            min-height: calc(100vh - 150px);
            margin-top: 85px;
        }

        .footer-custom {
            font-size: 0.8rem;
            color: #8e8e8e;
            padding: 30px 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Amigoz</a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <i class="bi bi-list fs-2"></i>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door me-1"></i></a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Chat"><i class="bi bi-chat-dots me-1"></i></a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-check me-1"></i></a></li>
                    </ul>

                    <div class="user-section">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <div class="user-avatar-circle">
                                <i class="bi bi-person-fill text-secondary"></i>
                            </div>
                            <span class="username-display">@User.Identity.Name</span>

                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="logout-btn">Log Out</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom">
        <div class="container text-center">
            <div class="mb-2">
                <a class="text-decoration-none text-dark mx-2" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
            <span>&copy; @DateTime.Now.Year Amigoz</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>